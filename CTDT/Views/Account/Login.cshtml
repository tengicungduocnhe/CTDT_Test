@model LoginViewModel
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Mazer Admin Dashboard</title>
    <link rel="stylesheet" crossorigin href="/assets/compiled/css/app.css">
    <link rel="stylesheet" crossorigin href="/assets/compiled/css/app-dark.css">
    <link rel="stylesheet" crossorigin href="/assets/compiled/css/auth.css">
    <style>

        #auth {
            margin: 0;
            width: 100vw;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background-image: url('https://data.designervn.net/2019/01/6667_dfe362e5b68a47b572d96e077d1456e1.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

        .auth-logo {
            margin-bottom: 30px;
        }

        .auth-logo img {
            width: 300px;
            height: 300px;
            border-radius: 50%;
            border: 10px solid #0072ff;
        }

        .auth-title {
            color: white;
            font-size: 36px;
            font-weight: bold;
            margin-bottom: 40px;
        }

        form {
            width: 100%;
            max-width: 450px;
            padding: 30px;
            background: rgba(255, 255, 255, 0.8);
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .form-group input {
            font-size: 18px;
        }

        .btn {
            font-size: 18px;
            padding: 15px;
        }


        .btn-primary {
            background-color: #0072ff;
            border-color: #0072ff;
        }

        .btn-primary:hover {
            background-color: #005fcc;
            border-color: #005fcc;
        }
    </style>
</head>

<body>
    <div id="auth">
        <div class="row h-100">
            <div class="col-lg-12 col-12">
                <div id="auth-left">
                    <div class="auth-logo">
                        <a href="index.html">
                            <div style="text-align: center; margin-top: 150px;">


                        </a>
                    </div>


                    <div style="text-align: center; margin-top: 150px;">
                        <img src="https://png.pngitem.com/pimgs/s/789-7897442_cyber-security-logo-png-transparent-png.png"
                             alt="Logo"
                             style="width: 200px; height: 200px; border-radius: 50%; border: 5px solid #0072ff;">
                        <p style="font-size: 70px; font-weight: bold; color: #1E90FF; margin-top: 20px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7), -2px -2px 4px rgba(0, 0, 0, 0.7);
letter-spacing: 2px; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
                            C500HEMIS
                        </p>
                    </div>


                    <form asp-action="Login">
                        <!-- Hiển thị thông báo lỗi -->
                        @if (ViewBag.Error != null)

                        {
                            <div class="alert alert-danger">@ViewBag.Error</div>
                        }

                        <div class="form-group position-relative has-icon-left mb-4">
                            <input asp-for="Username" class="form-control form-control-xl" placeholder="Tên đăng nhập">
                            <div class="form-control-icon">
                                <i class="bi bi-person"></i>
                            </div>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-group position-relative has-icon-left mb-4">
                            <input asp-for="Password" class="form-control form-control-xl" placeholder="Mật khẩu">
                            <div class="form-control-icon">
                                <i class="bi bi-shield-lock"></i>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <button class="btn btn-primary btn-block btn-lg shadow-lg mt-5">Đăng nhập</button>
                    </form>

                    <div class="text-center mt-5 text-lg fs-4">
                        <p class="text-gray-600">Bạn không có tài khoản? <a asp-action="Register" class="font-bold">Đăng ký</a>.</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-12 d-none d-lg-block">
                <div id="auth-right">
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}