

@{
    ViewData["Title"] = "Chương trình đào tạo";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!--font chữ-->
    <link href='https://fonts.googleapis.com/css?family=Aclonica' rel='stylesheet'>

    <style>
        .classParent {
            height: 100%;
            width: 100%;
            margin: auto;
        }

        #demo {
            width: 500px; /* Chiều rộng cố định */
            height: 250px; /* Chiều cao cố định */
            margin: 0 auto; /* Căn giữa carousel */
            margin-bottom: 50px; 
        }

        .carousel-inner img {
            width: 100%; /* Phù hợp chiều rộng container */
            height: 100%; /* Phù hợp chiều cao container */
            object-fit: cover; /* Cắt hình ảnh để phù hợp container */
        }
        .classOne {
            /* Selector cho #demo */
         height: 550px;

        }


        body {
            position: relative; /* Đặt vị trí tương đối cho body */
            background-image: url('https://i.pinimg.com/736x/6f/02/0d/6f020da11d3b8a4d5f0e4db688cbce61.jpg'); /* Ảnh nền */
            background-size: cover; /* Che phủ toàn bộ trang */
            background-position: center; /* Căn giữa ảnh */
            background-attachment: fixed; /* Giữ ảnh nền cố định khi cuộn */
            background-repeat: no-repeat; /* Không lặp lại ảnh */
            padding-top: 70px; /* Khoảng cách từ đỉnh trang */
            color: #333; /* Màu chữ */
            height: 100vh; /* Chiều cao của body bằng chiều cao cửa sổ */
            overflow: hidden; /* Ẩn thanh cuộn */
        }
      

        .classTwo {
            height: calc(100% - 550px); 
        }

        #suggestions li {
            padding: 10px;
            cursor: pointer;
        }

            #suggestions li:hover {
                background-color: #f0f0f0;
            }


    </style>
</head>
<body>
    <div class="classParent">

        <!-- Carousel -->
        <div id="demo" class="classOne carousel slide mb-5" data-bs-ride="carousel">

            <!-- Indicators/dots -->
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
                <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
                <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
            </div>

            <!-- The slideshow/carousel -->
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://xdcs.cdnchinhphu.vn/zoom/537_336/446259493575335936/2024/8/20/an-1724158403756710945869-83-0-1333-2000-crop-17241584106751622139112.jpg" alt="Los Angeles" class="d-block" style="width:100%">
                </div>
                <div class="carousel-item">
                    <img src="https://lh3.googleusercontent.com/proxy/qtKAPzRRvklsvMWuhOSWYIn_tI5hs6jYojbrllsiN8P4YF5qVWiTUoh9VXTsu4xaocWnT7wGCF056hrqH-SRRhqx9qfEC2SoJp53uAjdP__JXWkGJ_3TSuTyyNVEUUe-9oAZJdu7-RsCTwJgrQ" alt="Chicago" class="d-block" style="width:100%">
                </div>
                <div class="carousel-item">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRSR7HOerwEZuYyl6vnH3kVN84AEc9UTnQ-SA&s" alt="New York" class="d-block" style="width:100%">
                </div>
            </div>

            <!-- Left and right controls/icons -->
            <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>

        <div class="classTwo" style="text-align: center; margin-top: 50px;" class=" mt-5">
            <h1 style="font-family: 'Aclonica';font-size: 50px;color:azure">C500 Hemis</h1>

            <input type="text"
                   id="search-box"
                   class="form-control"
                   style="width: 300px; display: inline-block;"
                   placeholder="Search..."
                   oninput="searchSuggestions(this.value)" />
            <button class="btn btn-primary" onclick="navigateToPage()">
                Search
            </button>
        </div>
    </div>

    <ul id="suggestions"
        style="
        list-style-type: none;
        padding: 0;
        width: 300px;
        margin: 10px auto;
        border: 1px solid #ddd;
        background: white;
        display: none;
        position: relative;
        z-index: 1000;"></ul>


        <script>
            // tìm kiếm 
        const searchLinks = [
            { name: "Chương Trình Đào Tạo Create", link: "/ChuongTrinhDaoTao/Create" },
            { name: "Chương Trình Đào Tạo Index", link: "/ChuongTrinhDaoTao/Index" },


            { name: "Gia Hạn Chương Trình Create", link: "/GiaHanChuongTrinhDaoTao/Create" },
            { name: "Gia Hạn Chương Trình Index", link: "/GiaHanChuongTrinhDaoTao/Index" },
          

            { name: "Năm Áp Dụng Chương Trình Create", link: "/NamApDungChuongTrinh/Create" },
            { name: "Năm Áp Dụng Chương Trình Index", link: "/NamApDungChuongTrinh/Index" },
      

            { name: "Ngôn Ngữ Giảng Dạy Create", link: "/NgonNguGiangDay/Create" },
            { name: "Ngôn Ngữ Giảng Dạy Index", link: "/NgonNguGiangDay/Index" },
           

            { name: "Quyết Định Cấp Phép Create", link: "/QuyetDinhCapPhepChuongTrinhDungChoChuongTrinhNuocNgoai/Create" },
            { name: "Quyết Định Cấp Phép Index", link: "/QuyetDinhCapPhepChuongTrinhDungChoChuongTrinhNuocNgoai/Index" },
        
            { name: "Thông Tin Kiểm Định Create", link: "/ThongTinKiemDinhCuaChuongTrinh/Create" },
            { name: "Thông Tin Kiểm Định Index", link: "/ThongTinKiemDinhCuaChuongTrinh/Index" },
          

        ];

        // Hàm gợi ý
        function searchSuggestions(query) {
            const suggestions = document.getElementById("suggestions");
            suggestions.innerHTML = ""; // Xóa gợi ý cũ
            if (!query.trim()) {
                suggestions.style.display = "none";
                return;
            }

            const filteredLinks = searchLinks.filter(item =>
                item.name.toLowerCase().includes(query.toLowerCase())
            );

            if (filteredLinks.length > 0) {
                suggestions.style.display = "block";
                filteredLinks.forEach(item => {
                    const li = document.createElement("li");
                    li.textContent = item.name;
                    li.onclick = () => (window.location.href = item.link);
                    suggestions.appendChild(li);
                });
            } else {
                suggestions.style.display = "none";
            }
        }

        // Điều hướng đến trang khi nhấn nút Search
        function navigateToPage() {
            const query = document.getElementById("search-box").value;
            const match = searchLinks.find(item =>
                item.name.toLowerCase().includes(query.toLowerCase())
            );

            if (match) {
                window.location.href = match.link;
            } else {
                alert("No matching page found!");
            }
        }

        </script>
</body>
</html>

