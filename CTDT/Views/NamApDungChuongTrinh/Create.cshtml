@model CTDT.Models.TbNamApDungChuongTrinh

@{
    ViewData["Title"] = "Create";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Create</title>
    <!-- Bootstrap CSS (Using Bootstrap 5 for better design) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sofia&effect=emboss|shadow-multiple">
    <style>
        h1 {
            font-size: 45px;
        }

        body {
            position: relative;
            background-image: url('https://lh6.googleusercontent.com/wkeQrgK5pTamYY8M618pFEEAcuQJjfbpmIE-Mhp46LBwqYjNOqClsFFWYY-FxA46hjHkmzNIK7v8Dnhw0KSiTUcwoOKKDywa1eqwFX...a4ACL');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-repeat: no-repeat;
            padding-top: 70px;
            color: #333;
        }

            body::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(255, 255, 255, 0.2);
                backdrop-filter: blur(10px);
                z-index: -1;
            }

        .hi {
            box-shadow: 0 0 5px cyan, 0 0 25px cyan;
            transition: all 0.3s ease;
            transform: translateZ(0);
        }

            .hi:hover {
                box-shadow: 0 0 5px cyan, 0 0 25px cyan, 0 0 50px cyan, 0 0 100px cyan, 0 0 200px cyan;
                transform: translateY(-10px);
                transition: all 0.3s ease;
            }
    </style>
</head>

<body>
    <div class="container">
        <h1 class="text-center mt-4 mb-4 font-effect-shadow-multiple">TẠO MỚI</h1>
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white text-center">
                        <h4>Năm Áp Dụng Chương Trình</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="IdNamApDungChuongTrinh" class="form-label fw-bold">ID Nam Áp Dụng</label>
                                    <div class="input-group has-validation">
                                        <input asp-for="IdNamApDungChuongTrinh" class="form-control" placeholder="Nhập ID Nam Áp Dụng" data-bs-toggle="tooltip" title="Nhập ID Nam Áp Dụng" />
                                    </div>
                                    <span asp-validation-for="IdNamApDungChuongTrinh" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="IdChuongTrinhDaoTao" class="form-label fw-bold">Chương Trình Đào Tạo</label>
                                    <div class="input-group has-validation">
                                        <select asp-for="IdChuongTrinhDaoTao" class="form-control" asp-items="ViewBag.IdChuongTrinhDaoTao" data-bs-toggle="tooltip" title="Chọn Chương Trình Đào Tạo"></select>
                                    </div>
                                    <span asp-validation-for="IdChuongTrinhDaoTao" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="SoTinChiToiThieuDeTotNghiep" class="form-label fw-bold">Số Tín Chỉ Tối Thiểu</label>
                                    <div class="input-group has-validation">
                                        <input asp-for="SoTinChiToiThieuDeTotNghiep" class="form-control" placeholder="Nhập số tín chỉ tối thiểu" data-bs-toggle="tooltip" title="Nhập số tín chỉ tối thiểu" />
                                    </div>
                                    <span asp-validation-for="SoTinChiToiThieuDeTotNghiep" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="TongHocPhiToanKhoa" class="form-label fw-bold">Tổng Học Phí Toàn Khóa</label>
                                    <div class="input-group has-validation">
                                        <input asp-for="TongHocPhiToanKhoa" class="form-control" placeholder="Nhập tổng học phí" data-bs-toggle="tooltip" title="Nhập tổng học phí" />
                                    </div>
                                    <span asp-validation-for="TongHocPhiToanKhoa" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="NamApDung" class="form-label fw-bold">Năm Áp Dụng</label>
                                    <div class="input-group has-validation">
                                        <input asp-for="NamApDung" class="form-control" placeholder="Chọn năm áp dụng" data-bs-toggle="tooltip" title="Chọn năm áp dụng" />
                                    </div>
                                    <span asp-validation-for="NamApDung" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="ChiTieuTuyenSinhHangNam" class="form-label fw-bold">Chỉ Tiêu Tuyển Sinh</label>
                                    <div class="input-group has-validation">
                                        <input asp-for="ChiTieuTuyenSinhHangNam" class="form-control" placeholder="Nhập chỉ tiêu tuyển sinh" data-bs-toggle="tooltip" title="Nhập chỉ tiêu tuyển sinh" />
                                    </div>
                                    <span asp-validation-for="ChiTieuTuyenSinhHangNam" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between mt-4">
                                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                                <button type="submit" class="btn btn-success">
                                    Tạo mới
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
