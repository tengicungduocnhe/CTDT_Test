@model CTDT.Models.TbNamApDungChuongTrinh

@{
    ViewData["Title"] = "Create";
}
<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Form Layout</h3>
                <p class="text-subtitle text-muted">Multiple form layouts, you can use.</p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Form Layout</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <section id="multiple-column-form">
        <div class="row match-height">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Multiple Column</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <form asp-action="Create" id="form">
                                <div class="row">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label asp-for="IdNamApDungChuongTrinh" class="control-label"></label>
                                            <input asp-for="IdNamApDungChuongTrinh" class="form-control" />
                                            <span asp-validation-for="IdNamApDungChuongTrinh" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label asp-for="IdChuongTrinhDaoTao" class="control-label"></label>
                                            <select asp-for="IdChuongTrinhDaoTao" class ="form-control" asp-items="ViewBag.IdChuongTrinhDaoTao"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label asp-for="SoTinChiToiThieuDeTotNghiep" class="control-label"></label>
                                            <input asp-for="SoTinChiToiThieuDeTotNghiep" class="form-control" />
                                            <span asp-validation-for="SoTinChiToiThieuDeTotNghiep" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label asp-for="TongHocPhiToanKhoa" class="control-label"></label>
                                            <input asp-for="TongHocPhiToanKhoa" class="form-control" />
                                            <span asp-validation-for="TongHocPhiToanKhoa" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label asp-for="NamApDung" class="control-label"></label>
                                            <input asp-for="NamApDung" class="form-control" />
                                            <span asp-validation-for="NamApDung" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label asp-for="ChiTieuTuyenSinhHangNam" class="control-label"></label>
                                            <input asp-for="ChiTieuTuyenSinhHangNam" class="form-control" />
                                            <span asp-validation-for="ChiTieuTuyenSinhHangNam" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 d-flex justify-content-end">
                                        <button type="submit" class="btn btn-primary me-1 mb-1">Xác nhận</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.jsdelivr.net/gh/kirito99152/search_select@latest/search_select.js"></script>
    <script>
        let select = new search_select("form");
        select.IsNULL = true;
        select.run();
    </script>
}
