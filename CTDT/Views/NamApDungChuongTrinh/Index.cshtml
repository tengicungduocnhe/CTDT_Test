@model IEnumerable<CTDT.Models.TbNamApDungChuongTrinh>

@{
    ViewData["Title"] = "Index";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<style>
    .btn-icon {
        position: relative;
        overflow: hidden;
        display: inline-block;
        width: 40px;
        height: 40px;
        text-align: center;
    }

        .btn-icon i {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            transition: opacity 0.3s ease-in-out;
        }

        .btn-icon span {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) scale(1);
            opacity: 0;
            font-size: 12px;
            font-weight: bold;
            transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out;
        }

        .btn-icon:hover i {
            opacity: 0; /* Ẩn biểu tượng khi hover */
        }

        .btn-icon:hover span {
            opacity: 1; /* Hiện chữ khi hover */
            transform: translate(-50%, -50%) scale(1.2); /* Phóng to chữ khi hover */
        }
</style>

<h1 style="text-align:center">NĂM ÁP DỤNG CHƯƠNG TRÌNH </h1>
<p>
    <a asp-action="Create">Thêm Mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Số tín chỉ tối thiểu để tốt nghiệp</th>
            <th>Tổng học phí toàn khóa</th>
            <th>Năm áp dụng</th>
            <th>Chỉ tiêu tuyển sinh hàng năm</th>
            <th>ID Chương trình đào tạo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SoTinChiToiThieuDeTotNghiep)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TongHocPhiToanKhoa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NamApDung)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChiTieuTuyenSinhHangNam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdChuongTrinhDaoTaoNavigation.IdChuongTrinhDaoTao)
                </td>
                <td>
                    <button class="btn btn-outline-primary btn-sm btn-icon"
                            onclick="window.location.href = '@Url.Action("Edit", new { id = item.IdNamApDungChuongTrinh })'">
                        <i class="fa-sharp fa-solid fa-user-pen"></i>
                        <span>Sửa</span>
                    </button>
                    <button class="btn btn-outline-info btn-sm btn-icon"
                            onclick="window.location.href = '@Url.Action("Details", new { id = item.IdNamApDungChuongTrinh })'">
                        <i class="fa-sharp fa-solid fa-circle-info"></i>
                        <span>Chi Tiết</span>
                    </button>
                    <button class="btn btn-outline-danger btn-sm btn-icon"
                            onclick="window.location.href = '@Url.Action("Delete", new { id = item.IdNamApDungChuongTrinh })'">
                        <i class="fa-sharp fa-solid fa-trash"></i>
                        <span>Xóa</span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
