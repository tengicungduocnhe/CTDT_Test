@model CTDT.Models.TbNgonNguGiangDay

@{
    ViewData["Title"] = "Create";
}
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Create</title>
    <!-- Bootstrap CSS (Using Bootstrap 5 for better design) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sofia&effect=emboss|shadow-multiple">
    <style>
        h1 {
            font-size: 45px;
        }

        body {
            position: relative;
            background-image: url('https://example.com/your-background-image.jpg'); /* Replace with a suitable background */
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-repeat: no-repeat;
            padding-top: 70px;
            color: #333;
        }

        body::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            z-index: -1;
        }

        .hi {
            box-shadow: 0 0 5px cyan, 0 0 25px cyan;
            transition: all 0.3s ease;
            transform: translateZ(0);
        }

        .hi:hover {
            box-shadow: 0 0 5px cyan, 0 0 25px cyan, 0 0 50px cyan, 0 0 100px cyan, 0 0 200px cyan;
            transform: translateY(-10px);
            transition: all 0.3s ease;
        }

        .form-label {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mt-4 mb-4 font-effect-shadow-multiple">TẠO MỚI</h1>
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white text-center">
                        <h4>Ngôn Ngữ Giảng Dạy</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="IdNgonNguGiangDay" class="form-label">ID Ngôn Ngữ Giảng Dạy</label>
                                    <div class="input-group has-validation">
                                        <input asp-for="IdNgonNguGiangDay" class="form-control" placeholder="Nhập ID Ngôn Ngữ Giảng Dạy" data-bs-toggle="tooltip" title="Nhập ID Ngôn Ngữ Giảng Dạy" />
                                    </div>
                                    <span asp-validation-for="IdNgonNguGiangDay" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="IdChuongTrinhDaoTao" class="form-label">Chương Trình Đào Tạo</label>
                                    <div class="input-group has-validation">
                                        <select asp-for="IdChuongTrinhDaoTao" class="form-control" asp-items="ViewBag.IdChuongTrinhDaoTao" data-bs-toggle="tooltip" title="Chọn Chương Trình Đào Tạo"></select>
                                    </div>
                                    <span asp-validation-for="IdChuongTrinhDaoTao" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="IdNgonNgu" class="form-label">Ngôn Ngữ</label>
                                    <div class="input-group has-validation">
                                        <select asp-for="IdNgonNgu" class="form-control" asp-items="ViewBag.IdNgonNgu" data-bs-toggle="tooltip" title="Chọn Ngôn Ngữ"></select>
                                    </div>
                                    <span asp-validation-for="IdNgonNgu" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="IdTrinhDoNgonNguDauVao" class="form-label">Trình Độ Ngôn Ngữ Đầu Vào</label>
                                    <div class="input-group has-validation">
                                        <select asp-for="IdTrinhDoNgonNguDauVao" class="form-control" asp-items="ViewBag.IdTrinhDoNgonNguDauVao" data-bs-toggle="tooltip" title="Chọn Trình Độ Ngôn Ngữ Đầu Vào"></select>
                                    </div>
                                    <span asp-validation-for="IdTrinhDoNgonNguDauVao" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between mt-4">
                                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                                <button type="submit" class="btn btn-success">Tạo mới</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
