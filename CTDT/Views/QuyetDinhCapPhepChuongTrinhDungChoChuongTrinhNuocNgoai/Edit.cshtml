@model CTDT.Models.TbQuyetDinhCapPhepChuongTrinhDungChoChuongTrinhNuocNgoai

@{
    ViewData["Title"] = "Edit";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1CmrxMRARb6aLqgBO7yyAxTOQE2AKb9GfXnEAEELNUeFwZZLqQWHeSokfJ/4m2Or" crossorigin="anonymous">
    <title>Chỉnh sửa</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sofia&effect=emboss|shadow-multiple">
    <style>
        h1 {
            font-size: 45px;
        }

        body {
            position: relative;
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-repeat: no-repeat;
            padding-top: 70px;
            color: #333;
        }

        body::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            z-index: -1;
        }
    </style>
</head>

<h1 class="text-center mt-4 mb-4 font-effect-shadow-multiple">CHỈNH SỬA</h1>

<div class="container">
    <div class="card shadow-lg border-0 rounded-3 mb-5">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="card-title mb-0">Cập nhật Quyết Định</h4>
            <span class="badge bg-light text-primary fs-6" data-bs-toggle="tooltip" title="ID Quyết Định">ID: @Model.IdQuyetDinhCapPhepChuongTrinhDungChoChuongTrinhNuocNgoai</span>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="IdQuyetDinhCapPhepChuongTrinhDungChoChuongTrinhNuocNgoai" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="IdChuongTrinhDaoTao" class="form-label fw-bold">Chương Trình Đào Tạo</label>
                        <select asp-for="IdChuongTrinhDaoTao" class="form-control" asp-items="ViewBag.IdChuongTrinhDaoTao" data-bs-toggle="tooltip" title="Chọn Chương Trình"></select>
                        <span asp-validation-for="IdChuongTrinhDaoTao" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="IdLoaiQuyetDinh" class="form-label fw-bold">Loại Quyết Định</label>
                        <select asp-for="IdLoaiQuyetDinh" class="form-control" asp-items="ViewBag.IdLoaiQuyetDinh" data-bs-toggle="tooltip" title="Chọn Loại Quyết Định"></select>
                        <span asp-validation-for="IdLoaiQuyetDinh" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="SoQuyetDinh" class="form-label fw-bold">Số Quyết Định</label>
                        <input asp-for="SoQuyetDinh" class="form-control" placeholder="Nhập số quyết định" data-bs-toggle="tooltip" title="Nhập số quyết định" />
                        <span asp-validation-for="SoQuyetDinh" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="NgayBanHanhQuyetDinh" class="form-label fw-bold">Ngày Ban Hành</label>
                        <input asp-for="NgayBanHanhQuyetDinh" class="form-control" type="date" data-bs-toggle="tooltip" title="Chọn ngày ban hành" />
                        <span asp-validation-for="NgayBanHanhQuyetDinh" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="IdHinhThucDaoTao" class="form-label fw-bold">Hình Thức Đào Tạo</label>
                        <select asp-for="IdHinhThucDaoTao" class="form-control" asp-items="ViewBag.IdHinhThucDaoTao" data-bs-toggle="tooltip" title="Chọn Hình Thức Đào Tạo"></select>
                        <span asp-validation-for="IdHinhThucDaoTao" class="text-danger small"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary btn-lg mx-2 shadow-sm" data-bs-toggle="tooltip" title="Quay lại trang danh sách">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-success btn-lg mx-2 shadow-sm" data-bs-toggle="tooltip" title="Lưu thay đổi">
                        <i class="bi bi-save"></i> Lưu
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2Kdpy8kP5xvw7LWqBOyntk54J2WW4xNp3Xnt7f0EWFa3jKpGk9XG9eoPe+3" crossorigin="anonymous"></script>
}
