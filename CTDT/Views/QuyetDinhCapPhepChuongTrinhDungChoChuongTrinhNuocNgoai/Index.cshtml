@model IEnumerable<CTDT.Models.TbQuyetDinhCapPhepChuongTrinhDungChoChuongTrinhNuocNgoai>

@{
    ViewData["Title"] = "Index";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<style>
    .btn-icon {
        position: relative;
        overflow: hidden;
        display: inline-block;
        width: 40px;
        height: 40px;
        text-align: center;
    }

        .btn-icon i {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            transition: opacity 0.3s ease-in-out;
        }

        .btn-icon span {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) scale(1);
            opacity: 0;
            font-size: 12px;
            font-weight: bold;
            transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out;
        }

        .btn-icon:hover i {
            opacity: 0;
        }

        .btn-icon:hover span {
            opacity: 1;
            transform: translate(-50%, -50%) scale(1.2);
        }

    .btn-add {
        display: inline-block;
        position: relative;
        overflow: hidden;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        text-align: center;
        background-color: #28a745; /* Green color */
        color: white;
        cursor: pointer;
        border: none;
        transition: background-color 0.3s ease-in-out;
    }

        .btn-add i {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 24px;
            transition: opacity 0.3s ease-in-out;
        }

        .btn-add span {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) scale(1);
            opacity: 0;
            font-size: 14px;
            font-weight: bold;
            transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out;
        }

        .btn-add:hover {
            background-color: #218838; /* Darker green on hover */
        }

            .btn-add:hover i {
                opacity: 0;
            }

            .btn-add:hover span {
                opacity: 1;
                transform: translate(-50%, -50%) scale(1.2);
            }
</style>

<h1 style="text-align:center">CHƯƠNG TRÌNH NƯỚC NGOÀI</h1>

<p>
    <button class="btn-add" onclick="window.location.href='@Url.Action("Create")'">
        <i class="fa-solid fa-plus"></i>
        <span>Thêm Mới</span>
    </button>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Số quyết định
            </th>
            <th>
                Ngày ban hành quyết định
            </th>
            <th>
                ID Chương trình đào tạo
            </th>
            <th>
                ID Hình thức đào tạo
            </th>
            <th>
                ID Loại quyết định
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SoQuyetDinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayBanHanhQuyetDinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdChuongTrinhDaoTaoNavigation.IdChuongTrinhDaoTao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdHinhThucDaoTaoNavigation.IdHinhThucDaoTao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdLoaiQuyetDinhNavigation.IdLoaiQuyetDinh)
                </td>
                <td>
                    <button class="btn btn-outline-primary btn-sm btn-icon"
                            onclick="window.location.href = '@Url.Action("Edit", new { id = item.IdQuyetDinhCapPhepChuongTrinhDungChoChuongTrinhNuocNgoai })'">
                        <i class="fa-sharp fa-solid fa-user-pen"></i>
                        <span>Sửa</span>
                    </button>
                    <button class="btn btn-outline-info btn-sm btn-icon"
                            onclick="window.location.href = '@Url.Action("Details", new { id = item.IdQuyetDinhCapPhepChuongTrinhDungChoChuongTrinhNuocNgoai })'">
                        <i class="fa-sharp fa-solid fa-circle-info"></i>
                        <span>Chi Tiết</span>
                    </button>
                    <button class="btn btn-outline-danger btn-sm btn-icon"
                            onclick="window.location.href = '@Url.Action("Delete", new { id = item.IdQuyetDinhCapPhepChuongTrinhDungChoChuongTrinhNuocNgoai })'">
                        <i class="fa-sharp fa-solid fa-trash"></i>
                        <span>Xóa</span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
