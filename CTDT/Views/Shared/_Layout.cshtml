<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CTDT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CTDT.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        .navbar {
            position: fixed; /* Đảm bảo navbar cố định */
            top: 0; /* Gắn sát trên cùng */
            left: 0; /* Gắn sát cạnh trái */
            width: 100%; /* Đảm bảo nó chiếm hết chiều ngang */
            z-index: 1030; /* Hiển thị trên các phần tử khác */
            margin: 0; /* Xóa margin */
            padding: 0; /* Xóa padding */
        }

        /* Navbar luôn cố định trên cùng */
       

        /* Hiệu ứng khi mục được chọn */
        .navbar-nav .nav-item.active .nav-link {
            background-color: #0056b3; /* Màu xanh */
            color: white; /* Màu chữ trắng */
            font-weight: bold;
            border-radius: 5px; /* Tùy chỉnh bo góc (nếu cần) */
            padding: 8px 15px; /* Khoảng cách nội dung */
            transition: all 0.3s ease-in-out; /* Hiệu ứng mượt */
        }

        /* Khi hover vào mục */
        .navbar-nav .nav-item .nav-link:hover {
            background-color: #0056b3; /* Màu xanh đậm hơn */
            color: white;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <!-- Logo -->
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="https://i.pinimg.com/736x/2d/97/7b/2d977b0eabfeb3d451a3d06c96286de9.jpg"
                     style="width: 50px; height: 50px; border-radius: 50%;" />
            </a>

            <!-- Button for responsive navbar -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar menu -->
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active" : "")">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "ChuongTrinhDaoTao" ? "active" : "")">
                        <a class="nav-link" asp-area="" asp-controller="ChuongTrinhDaoTao" asp-action="Index">Chương Trình Đào Tạo </a>
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "GiaHanChuongTrinhDaoTao" ? "active" : "")">
                        <a class="nav-link" asp-area="" asp-controller="GiaHanChuongTrinhDaoTao" asp-action="Index">Gia Hạn Chương Trình</a>
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "NamApDungChuongTrinh" ? "active" : "")">
                        <a class="nav-link" asp-area="" asp-controller="NamApDungChuongTrinh" asp-action="Index">Năm Áp Dụng Chương Trình</a>
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "NgonNguGiangDay" ? "active" : "")">
                        <a class="nav-link" asp-area="" asp-controller="NgonNguGiangDay" asp-action="Index">Ngôn Ngữ Giảng Dạy</a>
                    </li>

                    <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "QuyetDinhCapPhepChuongTrinhDungChoChuongTrinhNuocNgoai" ? "active" : "")">
                        <a class="nav-link" asp-area="" asp-controller="QuyetDinhCapPhepChuongTrinhDungChoChuongTrinhNuocNgoai" asp-action="Index">Quyết Định Cấp Phép </a>
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "ThongTinKiemDinhCuaChuongTrinh" ? "active" : "")">
                        <a class="nav-link" asp-area="" asp-controller="ThongTinKiemDinhCuaChuongTrinh" asp-action="Index">Thông Tin Kiểm Định</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script> 
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        const sidebarToggle = document.querySelector('[data-bs-toggle="collapse"]');
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('main-content');

        sidebarToggle.addEventListener('click', () => {
            sidebar.classList.toggle('collapsed');
        });

    </script>

</body>
</html>
