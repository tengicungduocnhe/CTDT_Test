@model IEnumerable<CTDT.Models.TbThongTinKiemDinhCuaChuongTrinh>

@{
    ViewData["Title"] = "Index";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<h1 style="text-align:center">THÔNG TIN KIỂM ĐỊNH CỦA CHƯƠNG TRÌNH</h1>

<p>
    <a asp-action="Create">Thêm Mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Số quết định
            </th>
            <th>
                Ngày cấp chứng nhận kiểm định
            </th>
            <th>
                Thời hạn kiểm định
            </th>
            <th>
                ID Chương trình đào tạo
            </th>
            <th>
                ID Kết quả kiểm định
            </th>
            <th>
                ID Tổ chức kiểm định
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SoQuyetDinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayCapChungNhanKiemDinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThoiHanKiemDinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdChuongTrinhDaoTaoNavigation.IdChuongTrinhDaoTao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdKetQuaKiemDinhNavigation.IdKetQuaKiemDinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdToChucKiemDinhNavigation.IdToChucKiemDinh)
            </td>
            <td>
                <td>
                    <button class="btn btn-outline-primary btn-sm"
                            onclick="window.location.href = '@Url.Action("Edit", new { id = item.IdThongTinKiemDinhCuaChuongTrinh })'">
                        <i class="fa-sharp fa-solid fa-user-pen"></i> Sửa
                    </button>
                    <button class="btn btn-outline-info btn-sm"
                            onclick="window.location.href = '@Url.Action("Details", new { id = item.IdThongTinKiemDinhCuaChuongTrinh })'">
                        <i class="fa-sharp fa-solid fa-circle-info"></i> Chi Tiết
                    </button>
                    <button class="btn btn-outline-danger btn-sm"
                            onclick="window.location.href = '@Url.Action("Delete", new { id = item.IdThongTinKiemDinhCuaChuongTrinh })'">
                        <i class="fa-sharp fa-solid fa-trash"></i> Xóa
                    </button>
                </td>

            </td>
        </tr>
}
    </tbody>
</table>
